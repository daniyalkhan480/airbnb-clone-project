<% layout('./layouts/boilerplate.ejs')-%>
<body>
    <h3 style="text-align: center;">Create a New Listing</h3>
    <div class="newForm">
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="title">
                <label for="title">Title</label>
                <input type="text" name="listing[title]" id="title" placeholder="Add a catchy title" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="description">
                <label for="description">Description</label>
                <textarea name="listing[description]" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>
            <div class="image">
                <label for="img-link">Upload Image </label>
                <input type="file" name="listing[image]" id="img-link" class="form-control" required>
            </div>
            <div class="mrow">
                <div>
                    <label for="price">Price</label>
                    <input type="number" name="listing[price]" id="price"  placeholder="1200" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid price</div>
                </div>
                <div class="country">
                    <label for="country">Country</label>
                    <input type="text" name="listing[country]" id="country"  placeholder="Pakistan" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
            </div>
            <div class="location">
                <label for="location">Location</label>
                <input type="text" name="listing[location]" id="location"  placeholder="Lahore,Punjab" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>
            <button>Add</button>
        </form>
    </div>
</body>